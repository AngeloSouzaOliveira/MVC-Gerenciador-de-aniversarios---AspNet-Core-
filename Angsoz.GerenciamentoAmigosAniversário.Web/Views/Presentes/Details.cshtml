@model Angsoz.GerenciamentoAmigosAniversario.Web.Models.Presente

@{
    ViewData["Title"] = "Detalhes do presente";
}

<h3> <strong style="padding-left:15px;"> @ViewData["Title"]</strong></h3>


<div class="col-md-8 col-lg-9">

    <div class="block">

        <div class="block-title">

            <div class="pull-right">
                <a class="btn themed-background-creme" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                <a class="btn themed-background-success" asp-action="Index"><i class="fa fa-undo"></i> Voltar para lista de presente</a>
            </div>
            <ul class="nav nav-tabs" data-toggle="tabs">
                <li class="active"><h4>Presente  do(a)  <strong>@Html.DisplayFor(model => model.Pessoas.Nome)  @Html.DisplayFor(model => model.Pessoas.Sobrenome) </strong></h4></li>
            </ul>
        </div>

        <div class="tab-content">

            <div class="tab-pane active" id="tickets-list">
                <div class="block-content-full">
                    <div class="table-responsive remove-margin-bottom">
                        <table class="table table-striped table-vcenter remove-margin-bottom">

                            <tbody>
                                <tr>
                                    <td class="text-left">Nome do Produto</td>
                                    <td>@Html.DisplayFor(model => model.Nome) </td>
                                </tr>
                                <tr>
                                    <td class="text-left">Descrição:</td>
                                    <td>@Html.DisplayFor(model => model.Descricao)</td>
                                </tr>
                                <tr>
                                    <td class="text-left">Valor do presente </td>
                                    <td>R$ @Html.DisplayFor(model => model.Valor)</td>
                                </tr>
                               

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>

    </div>

</div>
